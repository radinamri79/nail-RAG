# ============================================================================
# OpenAI API Configuration
# ============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
EMBEDDING_MODEL=text-embedding-3-small

# ============================================================================
# Weaviate Configuration (Docker service)
# ============================================================================
WEAVIATE_HOST=weaviate
WEAVIATE_PORT=8080
WEAVIATE_SCHEME=http
WEAVIATE_API_KEY=

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins for frontend
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# Application Environment
# ============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# Database and Caching
# ============================================================================
CACHING_ENABLED=true
PARALLEL_PROCESSING_ENABLED=true
STREAMING_ENABLED=true
QUERY_EXPANSION_ENABLED=true
CATEGORY_ROUTING_ENABLED=true

# ============================================================================
# Performance Tuning
# ============================================================================
MAX_CONTEXTS_PER_QUERY=8
SIMILARITY_SCORE_THRESHOLD=0.75
MAX_TOKENS_RESPONSE=1000
TEMPERATURE_RAG=0.7
TEMPERATURE_FACTUAL=0.2

# ============================================================================
# Vector Search Parameters
# ============================================================================
VECTOR_DIMENSION=1536
WEAVIATE_TIMEOUT=30
SEARCH_LIMIT_DEFAULT=10
WEAVIATE_BATCH_SIZE=50
EMBEDDING_BATCH_SIZE=100

# ============================================================================
# Conversation Memory
# ============================================================================
SHORT_TERM_MEMORY_LIMIT=10

# ============================================================================
# Request/Response Timeouts
# ============================================================================
GENERATION_TIMEOUT=30
API_TIMEOUT=60
